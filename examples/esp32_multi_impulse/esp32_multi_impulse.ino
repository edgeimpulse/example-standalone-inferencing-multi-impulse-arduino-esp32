/**
 * @brief      Arduino main function. Runs the inferencing loop.
 */
void loop()
{
    bool m = microphone_inference_record();
    if (!m) {
        ei_printf("ERR: Failed to record audio...\n");
        return;
    }

    signal_t signal;
    signal.total_length = EI_CLASSIFIER_SLICE_SIZE;
    signal.get_data = &microphone_audio_signal_get_data;
    ei_impulse_result_t result = { 0 };

    EI_IMPULSE_ERROR r = run_classifier_continuous(&impulse_229721_1, &signal, &result, debug_nn);
    if (r != EI_IMPULSE_OK) {
        ei_printf("ERR: Failed to run classifier (%d)\n", r);
        return;
    }

    // print the predictions
    //ei_printf("Keyword Predictions ");
    //ei_printf("(DSP: %d ms., Classification: %d ms., Anomaly: %d ms.)",
    //    result.timing.dsp, result.timing.classification, result.timing.anomaly);
    //ei_printf(": \n");
    for (size_t ix = 0; ix < EI_CLASSIFIER_LABEL_COUNT; ix++) {
        
        if (result.classification[ix].label == "on" && result.classification[ix].value > confidence_threshold) {
          state = 1;
          digitalWrite(LED_BUILTIN, 1);
          ei_printf("ON KEYWORD DETECTED, SWITCHING ON THE CAMERA INFERENCE");
          ei_printf("    %s: ", result.classification[ix].label);
          ei_printf_float(result.classification[ix].value);
          ei_printf("\n");
         }
        else if (result.classification[ix].label == "off" && result.classification[ix].value > confidence_threshold) {
          state = 0;
          digitalWrite(LED_BUILTIN, 0);
          ei_printf("OFF KEYWORD DETECTED, SWITCHING OFF THE CAMERA INFERENCE");
          ei_printf("    %s: ", result.classification[ix].label);
          ei_printf_float(result.classification[ix].value);
          ei_printf("\n");
        }
    }

   if (state) {

     snapshot_buf = (uint8_t*)malloc(EI_CAMERA_RAW_FRAME_BUFFER_COLS * EI_CAMERA_RAW_FRAME_BUFFER_ROWS * EI_CAMERA_FRAME_BYTE_SIZE);
  
      // check if allocation was successful
      if(snapshot_buf == nullptr) {
          ei_printf("ERR: Failed to allocate snapshot buffer!\n");
          return;
      }
  
      ei::signal_t signal_fomo;
      signal_fomo.total_length = impulse_179676_100.input_width * impulse_179676_100.input_height;
      signal_fomo.get_data = &ei_camera_get_data;
  
      if (ei_camera_capture((size_t)impulse_179676_100.input_width, (size_t)impulse_179676_100.input_height, snapshot_buf) == false) {
          ei_printf("Failed to capture image\r\n");
          free(snapshot_buf);
          return;
      }
  
      // Run the classifier
      ei_impulse_result_t result_fomo = { 0 };
  
      EI_IMPULSE_ERROR err = run_classifier(&impulse_179676_100, &signal_fomo, &result_fomo, debug_nn);
      if (err != EI_IMPULSE_OK) {
          ei_printf("ERR: Failed to run classifier (%d)\n", err);
          return;
      }
  
      // print the predictions
      ei_printf("Camera Predictions (DSP: %d ms., Classification: %d ms., Anomaly: %d ms.): \n",
                  result_fomo.timing.dsp, result_fomo.timing.classification, result_fomo.timing.anomaly);
  
      bool bb_found = result_fomo.bounding_boxes[0].value > 0;
      for (size_t ix = 0; ix < result_fomo.bounding_boxes_count; ix++) {
          auto bb = result_fomo.bounding_boxes[ix];
          if (bb.value == 0) {
              continue;
          }
          ei_printf("    %s (%f) [ x: %u, y: %u, width: %u, height: %u ]\n", bb.label, bb.value, bb.x, bb.y, bb.width, bb.height);
      }
      if (!bb_found) {
          ei_printf("    No objects found\n");
      }
  
      free(snapshot_buf);
   }
  
}

static void audio_inference_callback(uint32_t n_bytes)
{
    for(int i = 0; i < n_bytes>>1; i++) {
        inference.buffers[inference.buf_select][inference.buf_count++] = sampleBuffer[i];

        if(inference.buf_count >= inference.n_samples) {
            inference.buf_select ^= 1;
            inference.buf_count = 0;
            inference.buf_ready = 1;
        }
    }
}

static void capture_samples(void* arg) {

  const int32_t i2s_bytes_to_read = (uint32_t)arg;
  size_t bytes_read = i2s_bytes_to_read;

  while (record_status) {

    /* read data at once from i2s */
    i2s_read((i2s_port_t)1, (void*)sampleBuffer, i2s_bytes_to_read, &bytes_read, 100);

    if (bytes_read <= 0) {
      ei_printf("Error in I2S read : %d", bytes_read);
    }
    else {
        if (bytes_read < i2s_bytes_to_read) {
        ei_printf("Partial I2S read");
        }

        // scale the data (otherwise the sound is too quiet)
        for (int x = 0; x < i2s_bytes_to_read/2; x++) {
            sampleBuffer[x] = (int16_t)(sampleBuffer[x]) * 8;
        }

        if (record_status) {
            audio_inference_callback(i2s_bytes_to_read);
        }
        else {
            break;
        }
    }
  }
  vTaskDelete(NULL);
}

/**
 * @brief      Init inferencing struct and setup/start PDM
 *
 * @param[in]  n_samples  The n samples
 *
 * @return     { description_of_the_return_value }
 */
static bool microphone_inference_start(uint32_t n_samples)
{
    inference.buffers[0] = (signed short *)malloc(n_samples * sizeof(signed short));

    if (inference.buffers[0] == NULL) {
        return false;
    }

    inference.buffers[1] = (signed short *)malloc(n_samples * sizeof(signed short));

    if (inference.buffers[1] == NULL) {
        ei_free(inference.buffers[0]);
        return false;
    }

    inference.buf_select = 0;
    inference.buf_count = 0;
    inference.n_samples = n_samples;
    inference.buf_ready = 0;

    if (i2s_init(EI_CLASSIFIER_FREQUENCY)) {
        ei_printf("Failed to start I2S!");
    }

    ei_sleep(100);

    record_status = true;

    xTaskCreate(capture_samples, "CaptureSamples", 1024 * 32, (void*)sample_buffer_size, 10, NULL);

    return true;
}

/**
 * @brief      Wait on new data
 *
 * @return     True when finished
 */
static bool microphone_inference_record(void)
{
    bool ret = true;

    if (inference.buf_ready == 1) {
    //    ei_printf(
    //        "Error sample buffer overrun. Decrease the number of slices per model window "
    //        "(EI_CLASSIFIER_SLICES_PER_MODEL_WINDOW)\n");
        ret = false;
    }

    while (inference.buf_ready == 0) {
        delay(1);
    }

    inference.buf_ready = 0;
    return true;
}

